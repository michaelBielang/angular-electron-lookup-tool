{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceRoot": "/",
    "target": "es6",
    "outDir": "../../dist/api",
    "moduleResolution": "node",
    "module": "amd",
    "removeComments": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "noResolve": false,
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "../../node_modules/*"
      ]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
