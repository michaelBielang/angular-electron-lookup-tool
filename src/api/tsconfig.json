{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "outDir": "../../dist/api",
    "moduleResolution": "node",
    "module": "amd",
    "removeComments": true,
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./**/*.ts"
  ]
}
