{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "outDir": "../../dist/api",
    "moduleResolution": "node",
    "module": "amd",
    "removeComments": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "noResolve": false
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
