{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
