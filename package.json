{
  "name": "halt",
  "version": "0.0.0",
  "description": "Hochschul Active Directory Lookup Tool",
  "main": "electron.prod",
  "author": "Bichlmeier Christoph, Bielang Michael, Schmid Steffen",
  "license": "UNLICENSED",
  "scripts": {
    "ng": "ng",
    "start": "concurrently -k \"nodemon\" \"ng serve\" \"npm run electron:dev\"",
    "start:server": "nodemon",
    "electron:dev": "electron ./src/electron.dev",
    "electron:prod": "electron ./src/electron.prod",
    "build": "ng build --prod && tsc -p ./src/api/tsconfig.json && npm run copy",
    "package:win": "npm run build && npm run copy && cross-var electron-packager dist $npm_package_name-$npm_package_version --out=packages --platform=win32 --arch=x64 --overwrite ",
    "package:linux": "npm run build && npm run copy && cross-var electron-packager dist $npm_package_name-$npm_package_version --out=packages --platform=linux --arch=x64 --overwrite ",
    "package:osx": "npm run build && npm run copy && cross-var electron-packager dist $npm_package_name-$npm_package_version --out=packages --platform=darwin --arch=x64 --overwrite ",
    "package:all": "npm run build && npm run copy && cross-var electron-packager dist $npm_package_name-$npm_package_version --out=packages --all --arch=x64 --overwrite ",
    "copy": "node copy-static.js",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.1.0",
    "@angular/cdk": "^7.1.0",
    "@angular/common": "^7.1.0",
    "@angular/compiler": "^7.1.0",
    "@angular/core": "^7.1.0",
    "@angular/forms": "^7.1.0",
    "@angular/http": "^7.1.0",
    "@angular/material": "^7.1.0",
    "@angular/platform-browser": "^7.1.0",
    "@angular/platform-browser-dynamic": "^7.1.0",
    "@angular/router": "^7.1.0",
    "angular2-toaster": "^7.0.0",
    "body-parser": "^1.18.3",
    "bootstrap": "^4.1.3",
    "clipboard": "^2.0.4",
    "core-js": "^2.4.1",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.6",
    "rxjs": "^6.3.3",
    "rxjs-compat": "^6.0.0-rc.0",
    "winston": "^3.1.0",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.10.0",
    "@angular/cli": "^7.0.6",
    "@angular/compiler-cli": "^7.1.0",
    "@angular/language-service": "^7.1.0",
    "@types/clipboard": "^2.0.1",
    "@types/cors": "^2.8.4",
    "@types/jasmine": "~3.3.0",
    "@types/jasminewd2": "~2.0.2",
    "@types/morgan": "^1.7.35",
    "@types/node": "~10.12.10",
    "codelyzer": "^4.0.1",
    "concurrently": "^4.1.0",
    "cross-var": "^1.1.0",
    "electron": "^3.0.10",
    "electron-packager": "^12.2.0",
    "jasmine-core": "~3.3.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^3.1.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.4",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "protractor": "~5.4.1",
    "ts-node": "~7.0.1",
    "tslint": "~5.11.0",
    "typescript": "~3.1.6"
  }
}
